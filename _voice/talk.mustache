<div class="text-left border border-gray-200 py-4 px-4 rounded-md bg-gray-50 mt-8">
  <h2 class="text-xl mb-4 font-bold">Call your mobile phone &amp; play a message</h2>
  <form class="space-y-2 text-left" action="/voice/talk" method="POST">
    <div>
      <label for="phone">Phone number</label>
      <input id="phone" name="phone" type="text" autocomplete="phone" required class="mt-1 w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500" placeholder="" value="">
    </div>
    <div>
      <label for="message">Message</label>
      <textarea id="message" name="message" rows="2" class="mt-1 w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500" placeholder="">This is a text to speech call from Vonage</textarea>
    </div>
    <button type="submit" class="w-full rounded-md border bg-indigo-600 hover:bg-indigo-700 py-2 px-4 text-white">
      Send
    </button>
  </form>
</div>